<resources>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/pink</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">@color/deepOrange</item>
        <item name="android:colorPrimaryDark">@color/deepOrangeDarkTone2</item>
        <item name="android:colorAccent">@color/deepPurple</item>

        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/tealAccent2</item>
        <item name="colorControlHighlight">@color/tealAccent2</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/deepOrange</item>
        <item name="android:colorPrimaryDark">@color/deepOrangeDarkTone2</item>
        <item name="android:colorAccent">@color/tealAccent2</item>

        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/tealAccent2</item>
        <item name="colorControlHighlight">@color/tealAccent2</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="WorkThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/indigo</item>
        <item name="android:colorPrimaryDark">@color/indigoDarkTone2</item>
        <item name="android:colorAccent">@color/tealAccent2</item>

        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/tealAccent2</item>
        <item name="colorControlHighlight">@color/tealAccent2</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="CreatorThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/pink</item>
        <item name="android:colorPrimaryDark">@color/pinkDarkTone2</item>
        <item name="android:colorAccent">@color/tealAccent2</item>

        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/tealAccent2</item>
        <item name="colorControlHighlight">@color/tealAccent2</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    /**
    * STYLES
    **/
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:yearListSelectorColor">@color/pink</item>
        <item name="android:dayOfWeekTextAppearance">@android:color/white</item>
    </style>

</resources>
